@model WMSAMG.Models.CSIS2017Models.TblReceivingDetail
@using Syncfusion.EJ2
@using Microsoft.AspNetCore.Identity
@using WMSAMG.Areas.Identity.Data

@inject SignInManager<WMSAMGUser> SignInManager
