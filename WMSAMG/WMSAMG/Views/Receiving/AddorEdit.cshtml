    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron-fluid bg-light">
    <h2 class="text-left">@ViewData["Title"]</h2>
</div>
<p>@ViewBag.ErrorMsg</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddorEdit">
