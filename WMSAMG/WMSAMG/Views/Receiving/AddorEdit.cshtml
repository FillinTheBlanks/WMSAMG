                </ejs-dropdownlist>

            </div>
            <div class="form-group">
                <ejs-textbox id="StorageTypeId" readonly="true" cssClass="e-outline" placeholder="Storage Type" floatLabelType="Always"></ejs-textbox>

            </div>
            <div class="form-group">
